<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_audio"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="51dp"
    android:layout_marginVertical="4dp"
    android:weightSum="8">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/background2"
        >
        <ImageView
            android:id="@+id/thumb_default"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:src="@drawable/instrument_playlist" />
        <ImageView
            android:id="@+id/thumb_audio"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"

            />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seven"
            android:ellipsize="middle"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/audioArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_50"
            android:text="Nhaccuatui" />
    </LinearLayout>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/white_50"
        android:text="03:00" />
    <ImageView
        android:id="@+id/popup_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dot_horizontal"
        android:layout_gravity="center_vertical"
        app:tint="@color/white"
        android:padding="8dp"
        />
</LinearLayout>