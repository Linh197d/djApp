<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintVertical_weight="8"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_marginVertical="10dp"
    android:layout_height="match_parent"
    android:id="@+id/main_equalizer"
    >
    <TextView
        android:id="@+id/progress_sb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@id/textView1"
        app:layout_constraintStart_toStartOf="@id/textView1"
        android:fontFamily="@font/gothic_a1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rlt1"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlt1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toTopOf="@id/textView1"
        app:layout_constraintEnd_toStartOf="@id/rlt2"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="15dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/bg_equalizer_seekbar_primarycolor"
        app:layout_constraintTop_toBottomOf="@id/progress_sb1">


        <com.gambi.quanglinh.djmixer.custom.VerticalSeekbar
            android:id="@+id/seekBar1"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressTint="@color/primary"
            android:splitTrack="false"
            android:padding="3dp"
            android:max="5"
            android:min="-5"
            android:progress="0"
            android:progressDrawable="@drawable/bg_drawable_volume_up1"
            android:thumb="@drawable/thumb_"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/gothic_a1"
        android:textColor="@color/primary"
        android:text="60Hz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rlt1"
        app:layout_constraintStart_toStartOf="@id/rlt1"
        />
    <TextView
        android:id="@+id/progress_sb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/rlt2"
        app:layout_constraintEnd_toEndOf="@id/rlt2"
        android:fontFamily="@font/gothic_a1"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlt2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/progress_sb2"
        app:layout_constraintBottom_toTopOf="@id/textView1"
        app:layout_constraintEnd_toStartOf="@id/rlt3"
        app:layout_constraintStart_toEndOf="@id/rlt1"
        android:padding="15dp"
        app:layout_constraintHorizontal_weight="1"
        android:background="@drawable/bg_equalizer_seekbar_primarycolor"

        >


        <com.gambi.quanglinh.djmixer.custom.VerticalSeekbar
            android:id="@+id/seekBar2"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressTint="@color/primary"
            android:splitTrack="false"
            android:padding="3dp"
            android:max="5"
            android:min="-5"
            android:progress="0"
            android:progressDrawable="@drawable/bg_drawable_volume_up1"
            android:thumb="@drawable/thumb_"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/gothic_a1"
        android:textColor="@color/primary"
        android:text="230Hz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rlt2"
        app:layout_constraintStart_toStartOf="@id/rlt2"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/progress_sb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/rlt3"
        app:layout_constraintEnd_toEndOf="@id/rlt3"
        android:fontFamily="@font/gothic_a1"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlt3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/progress_sb3"
        app:layout_constraintBottom_toTopOf="@id/textView1"
        app:layout_constraintEnd_toStartOf="@id/rlt2"
        app:layout_constraintStart_toEndOf="@id/rlt4"
        android:padding="15dp"
        android:background="@drawable/bg_equalizer_seekbar_primarycolor"
        >


        <com.gambi.quanglinh.djmixer.custom.VerticalSeekbar
            android:id="@+id/seekBar3"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressTint="@color/primary"
            android:splitTrack="false"
            android:padding="3dp"
            android:max="5"
            android:min="-5"
            android:progress="0"
            android:progressDrawable="@drawable/bg_drawable_volume_up1"
            android:thumb="@drawable/thumb_"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/gothic_a1"
        android:textColor="@color/primary"
        android:text="910Hz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rlt3"
        app:layout_constraintStart_toStartOf="@id/rlt3"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/progress_sb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/rlt4"
        app:layout_constraintEnd_toEndOf="@id/rlt4"
        android:fontFamily="@font/gothic_a1"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlt4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/progress_sb4"
        app:layout_constraintBottom_toTopOf="@id/textView1"
        app:layout_constraintEnd_toStartOf="@id/rlt5"
        app:layout_constraintStart_toEndOf="@id/rlt3"
        android:padding="15dp"
        android:background="@drawable/bg_equalizer_seekbar_primarycolor"

        >


        <com.gambi.quanglinh.djmixer.custom.VerticalSeekbar
            android:id="@+id/seekBar4"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressTint="@color/primary"
            android:splitTrack="false"
            android:padding="3dp"
            android:max="5"
            android:min="-5"
            android:progress="0"
            android:progressDrawable="@drawable/bg_drawable_volume_up1"
            android:thumb="@drawable/thumb_"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/gothic_a1"
        android:textColor="@color/primary"
        android:text="14Hz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rlt4"
        app:layout_constraintStart_toStartOf="@id/rlt4"
        tools:ignore="SmallSp" />
    <TextView
        android:id="@+id/progress_sb5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="12sp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/rlt5"
        app:layout_constraintEnd_toEndOf="@id/rlt5"
        android:fontFamily="@font/gothic_a1"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rlt5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@id/progress_sb5"
        app:layout_constraintBottom_toTopOf="@id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rlt4"
        android:padding="15dp"
        android:background="@drawable/bg_equalizer_seekbar_primarycolor"

      >


        <com.gambi.quanglinh.djmixer.custom.VerticalSeekbar
            android:id="@+id/seekBar5"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressTint="@color/primary"
            android:splitTrack="false"
            android:padding="3dp"
            android:max="5"
            android:min="-5"
            android:progress="0"
            android:progressDrawable="@drawable/bg_drawable_volume_up1"
            android:thumb="@drawable/thumb_"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:fontFamily="@font/gothic_a1"
        android:textColor="@color/primary"
        android:text="3Hz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rlt5"
        app:layout_constraintStart_toStartOf="@id/rlt5"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>