<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@color/background2"
    >
<ImageView
    android:id="@+id/check"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@id/tvtTopDJ"
    android:src="@drawable/tabler_check"
    android:padding="6dp"
    />
    <TextView
        android:id="@+id/tvtTopDJ"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/topDJ_nochoose"
        android:text="@string/house"
        android:textSize="12sp"
        android:fontFamily="@font/gothic_a1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/topDJ_nochoose"
        app:layout_constraintTop_toBottomOf="@id/tvtTopDJ"
        android:layout_marginTop="3dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>