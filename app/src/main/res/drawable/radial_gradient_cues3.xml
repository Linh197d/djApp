<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient
                android:angle="135"
                android:endColor="#41464B"
                android:startColor="#191C21" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:end="2dp"
        android:start="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient
                android:type="radial"
                android:startColor="#90DBEB"
                android:endColor="#349AD4"
                android:gradientRadius="20dp"
                />
        </shape>
    </item>
</layer-list>